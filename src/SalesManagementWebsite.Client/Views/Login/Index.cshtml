@model SalesManagementWebsite.Contracts.Dtos.User.UserLoginDto

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml"; //Using layout for login only
}

<div class="container pt-5 pb-5 bg-white shadow rounded">
    <div class="row">

        <!-- Image Product -->
        <div class="col-md-5 border-end">
            <img src="images/product.png" alt="Product" width="350" height="350" class="img-fluid mx-auto d-block"> <!-- img-fluid: responsive image -->
        </div>

        <!-- Login Form -->
        <div class="col-md-5 pt-5 mx-auto d-block">
            <h1 class="fw-light">Đăng Nhập</h1>
            <p class="pb-2 fs-5 border-bottom fw-light">Hệ thống quản lý bán hàng</p>

            <form asp-action="Login">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text" id="basic-addon1">
                            <img src="images/user.png" width="30" height="30">
                        </span>
                    </div>
                    <input asp-for="UserName" class="form-control" placeholder="Username" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>

                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text" id="basic-addon1">
                            <img src="images/padlock.png" width="30" height="30">
                        </span>
                    </div>
                    <input asp-for="Password" class="form-control" placeholder="Password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <!-- Footer of form -->
                <p class="fw-light text-end">Quên mật khẩu?</p>  <!-- Todo -->
                <div class="form-group d-grid gap-2 pb-5">
                    <input type="submit" value="Đăng Nhập" class="btn btn-primary btn-lg" />
                </div>
            </form>
        </div>
    </div>
</div>


